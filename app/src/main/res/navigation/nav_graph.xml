<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- HomeFragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mnauhouse.ui.fragment.HomeFragment"
        android:label="Domů"
        tools:layout="@layout/fragment_home" />

    <!-- MenuFragment -->
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.mnauhouse.ui.fragment.MenuFragment"
        android:label="Menu"
        tools:layout="@layout/fragment_menu" />

    <!-- CatsFragment -->
    <fragment
        android:id="@+id/catsFragment"
        android:name="com.example.mnauhouse.ui.fragment.CatsFragment"
        android:label="Kočky"
        tools:layout="@layout/fragment_cats" />

    <!-- AdoptionFragment -->
    <fragment
        android:id="@+id/adoptionFragment"
        android:name="com.example.mnauhouse.ui.fragment.AdoptionFragment"
        android:label="Adopce"
        tools:layout="@layout/fragment_adopce" />

    <action
        android:id="@+id/action_catsFragment_to_adoptionFragment"
        app:destination="@id/adoptionFragment" />

    <!-- ReservationFragment -->
    <fragment
        android:id="@+id/reservationFragment"
        android:name="com.example.mnauhouse.ui.fragment.ReservationFragment"
        android:label="Rezervace"
        tools:layout="@layout/fragment_reservation" />

    <!-- ProfileFragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.mnauhouse.ui.fragment.ProfileFragment"
        android:label="Účet"
        tools:layout="@layout/fragment_profile" >

        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

    </fragment>

    <!-- LoginFragment -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.mnauhouse.ui.fragment.LoginFragment"
        android:label="Přihlásit se"
        tools:layout="@layout/fragment_login" >

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_loginFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

    </fragment>

    <!-- RegisterFragment -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.mnauhouse.ui.fragment.RegisterFragment"
        android:label="Registrovat se"
        tools:layout="@layout/fragment_register" />

    <!-- OrderFragment -->
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.mnauhouse.ui.fragment.OrderFragment"
        android:label="Objednat"
        tools:layout="@layout/fragment_order" >

        <action
            android:id="@+id/action_orderFragment_to_checkoutFragment"
            app:destination="@id/checkoutFragment" />

    </fragment>

    <!-- CheckoutFragment -->
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.example.mnauhouse.ui.fragment.CheckoutFragment"
        android:label="Objednávka"
        tools:layout="@layout/fragment_checkout" />

    <!-- ShelterFragment -->
    <fragment
        android:id="@+id/shelterFragment"
        android:name="com.example.mnauhouse.ui.fragment.ShelterFragment"
        android:label="Útulek" />

    <action
        android:id="@+id/action_adoptionFragment_to_shelterFragment"
        app:destination="@id/shelterFragment" />


    <!-- DonateFragment -->
    <fragment
        android:id="@+id/donateFragment"
        android:name="com.example.mnauhouse.ui.fragment.DonateFragment"
        android:label="Přispět"
        tools:layout="@layout/fragment_donate" />


</navigation>