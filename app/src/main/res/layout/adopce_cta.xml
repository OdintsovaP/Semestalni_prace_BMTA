<?xml version="1.0" encoding="utf-8"?>
<!-- Sekce: Připraveni adoptovat? -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nadpis -->
        <TextView
            android:id="@+id/textCtaTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Připraveni adoptovat?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:layout_marginBottom="8dp" />

        <!-- Podtext -->
        <TextView
            android:id="@+id/textCtaDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Navštivte nás v kavárně nebo zavolejte pro konzultaci."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Tlačítko: Zavolat -->
        <Button
            android:id="@+id/buttonCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zavolat"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Tlačítko: Navštívit kavárnu -->
        <Button
            android:id="@+id/buttonVisit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Navštívit kavárnu"
            android:backgroundTint="@color/teal_200"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
