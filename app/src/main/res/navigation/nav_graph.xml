<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Domů -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mnauhouse.ui.fragment.HomeFragment"
        android:label="Domů"
        tools:layout="@layout/fragment_home" />

    <!-- Menu -->
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.mnauhouse.ui.fragment.MenuFragment"
        android:label="Menu"
        tools:layout="@layout/fragment_menu" />

    <!-- Kočky -->
    <fragment
        android:id="@+id/catsFragment"
        android:name="com.example.mnauhouse.ui.fragment.CatsFragment"
        android:label="Kočky"
        tools:layout="@layout/fragment_cats" />

    <!-- Adopce -->
    <fragment
        android:id="@+id/adoptionFragment"
        android:name="com.example.mnauhouse.ui.fragment.AdoptionFragment"
        android:label="Adopce"
        tools:layout="@layout/fragment_adopce" />

    <!-- Útulek (je v bottom navigaci) -->
    <fragment
        android:id="@+id/shelterFragment"
        android:name="com.example.mnauhouse.ui.fragment.ShelterFragment"
        android:label="Útulek"
        tools:layout="@layout/fragment_shelter" />

    <!-- Rezervace -->
    <fragment
        android:id="@+id/reservationFragment"
        android:name="com.example.mnauhouse.ui.fragment.ReservationFragment"
        android:label="Rezervace"
        tools:layout="@layout/fragment_reservation" />

    <!-- Profil -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.mnauhouse.ui.fragment.ProfileFragment"
        android:label="Účet"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

    </fragment>

    <!-- Přihlášení -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.mnauhouse.ui.fragment.LoginFragment"
        android:label="Přihlásit se"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_loginFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

    </fragment>

    <!-- Registrace -->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.mnauhouse.ui.fragment.RegisterFragment"
        android:label="Registrovat se"
        tools:layout="@layout/fragment_register" />

    <!-- Objednávka (košík / objednat) -->
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.mnauhouse.ui.fragment.OrderFragment"
        android:label="Objednat"
        tools:layout="@layout/fragment_order">

        <action
            android:id="@+id/action_orderFragment_to_checkoutFragment"
            app:destination="@id/checkoutFragment" />

    </fragment>

    <!-- Checkout -->
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.example.mnauhouse.ui.fragment.CheckoutFragment"
        android:label="Objednávka"
        tools:layout="@layout/fragment_checkout" />

    <!-- Přispět -->
    <fragment
        android:id="@+id/donateFragment"
        android:name="com.example.mnauhouse.ui.fragment.DonateFragment"
        android:label="Přispět"
        tools:layout="@layout/fragment_donate" />

</navigation>
