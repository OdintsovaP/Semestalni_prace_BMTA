<?xml version="1.0" encoding="utf-8"?>
<!-- Sekce: Adopční poplatek -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nadpis sekce -->
        <TextView
            android:id="@+id/textFeeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adopční poplatek"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:layout_marginBottom="12dp" />

        <!-- Cena -->
        <TextView
            android:id="@+id/textFeePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1000 Kč"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Podtext -->
        <TextView
            android:id="@+id/textFeeSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Místo běžných 5700 Kč za všechny služby."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Popis -->
        <TextView
            android:id="@+id/textFeeDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Symbolický poplatek pokrývá pouze administrativní náklady. Zbytek nákladů hradí naše kavárna a partnerský útulek."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Tlačítko -->
        <Button
            android:id="@+id/buttonShelterInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Více o našem partnerském útulku"
            android:backgroundTint="@color/teal_200"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
