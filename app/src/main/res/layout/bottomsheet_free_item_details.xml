<?xml version="1.0" encoding="utf-8"?>
<!-- BottomSheetDialog: detaily služby zdarma -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Název služby -->
    <TextView
        android:id="@+id/textDetailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Název služby"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="8dp" />

    <!-- Cena služby -->
    <TextView
        android:id="@+id/textDetailPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0000 Kč"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_marginBottom="16dp" />

    <!-- Seznam detailů -->
    <TextView
        android:id="@+id/textDetailList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Detail 1\n• Detail 2\n• Detail 3"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp" />

    <!-- Zavírací tlačítko -->
    <Button
        android:id="@+id/buttonCloseDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zavřít"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>
