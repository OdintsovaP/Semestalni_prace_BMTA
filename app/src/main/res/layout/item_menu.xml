<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- 1. ImageView для картинки -->
    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <!-- 2. TextView для названия -->
        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Název položky"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 3. TextView для описания -->
        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Krátký popis položky menu." />

        <!-- 4. TextView для цены -->
        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="100 Kč"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 5. Кнопка или иконка для добавления в корзину -->
    <ImageButton
        android:id="@+id/addToCartButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/img"
        android:contentDescription="Přidat do košíku"
        android:layout_gravity="center_vertical" />

</LinearLayout>