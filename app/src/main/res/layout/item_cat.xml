<?xml version="1.0" encoding="utf-8"?>
<!-- Можно использовать CardView для красивого оформления -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 1. Картинка кошки. ID должно быть @+id/catImage -->
        <ImageView
            android:id="@+id/catImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="Fotka kočky" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 2. Имя кошки. ID должно быть @+id/catName -->
            <TextView
                android:id="@+id/catName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jméno kočky"
                android:textAppearance="?attr/textAppearanceHeadline6" />

            <!-- 3. Порода кошки. ID должно быть @+id/catBreed -->
            <TextView
                android:id="@+id/catBreed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Plemeno"
                android:textAppearance="?attr/textAppearanceBody2" />

            <!-- 4. Возраст кошки. ID должно быть @+id/catAge -->
            <TextView
                android:id="@+id/catAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Věk"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>