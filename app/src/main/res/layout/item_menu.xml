<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- 1. ImageView для картинки -->
    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <!-- 2. TextView для названия -->
        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Název položky"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 3. TextView для описания -->
        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Krátký popis položky menu." />

        <!-- 4. TextView для цены -->
        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="100 Kč"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Кнопки для корзины -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Кнопка минус -->
        <ImageButton
            android:id="@+id/minusButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_minus"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone" />

        <!-- Количество -->
        <TextView
            android:id="@+id/quantityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <!-- Кнопка плюс -->
        <ImageButton
            android:id="@+id/plusButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_add"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone" />

        <!-- Кнопка добавления (если не в корзине) -->
        <ImageButton
            android:id="@+id/addToCartButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_add"
            android:contentDescription="Přidat do košíku"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>