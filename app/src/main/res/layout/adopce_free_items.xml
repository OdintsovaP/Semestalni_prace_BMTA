<?xml version="1.0" encoding="utf-8"?>
<!-- Sekce: Co dostanete zdarma -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nadpis sekce -->
        <TextView
            android:id="@+id/textFreeItemsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Co dostanete zdarma"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"
            android:layout_marginBottom="12dp" />

        <!-- Popis -->
        <TextView
            android:id="@+id/textFreeItemsDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Při adopci jsou všechny tyto služby zahrnuty v adopčním poplatku. Celková hodnota služeb: 5700 Kč."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Grid 2×N – položky se doplní programově -->
        <GridLayout
            android:id="@+id/gridFreeItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:alignmentMode="alignMargins" />

        <!-- Text pod gridem -->
        <TextView
            android:id="@+id/textFreeItemsHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Klepněte na položku pro zobrazení detailů"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
